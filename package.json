  "main": "./dist/src/index.js",
  "module": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "author": "Christian Rackerseder <git@echooff.de>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:screendriver/convert-vapid-public-key.git"
  },
  "bugs": {
    "url": "https://github.com/screendriver/convert-vapid-public-key/issues"
  },
  "homepage": "https://github.com/screendriver/convert-vapid-public-key#readme",
  "keywords": [
    "vapid",
    "push-notifications",
    "web-push",
    "urlBase64ToUint8Array"
  ],
  "files": [
    "dist/src/index.js",
    "dist/src/index.d.ts"
  ],
  "scripts": {
    "prepublishOnly": "yarn clean && yarn build && yarn test",
    "clean": "rm -rf dist",
    "lint": "tslint -c tslint.json 'src/**/*.ts' 'test/**/*.ts'",
    "check:prettier": "prettier --check 'src/**/*.ts' 'test/**/*.ts'",
    "test:unit:tap": "nyc tape -r source-map-support/register -r esm 'dist/test/**/*.js'",
    "test:unit": "yarn test:unit:tap | tap-dot",
    "test": "yarn test:unit && yarn coverage",
    "test:ci": "yarn test:unit:tap | tap-xunit > test-results.xml",
    "coverage": "nyc report --reporter=text-summary",
    "build": "tsc --build"
  },
  "devDependencies": {
    "@types/atob": "2.1.1",
    "@types/tape": "4.2.32",
    "atob": "2.1.2",
    "esm": "3.0.84",
    "nyc": "13.3.0",
    "prettier": "1.17.0",
    "source-map-support": "0.5.9",
    "tap-dot": "2.0.0",
    "tap-xunit": "2.3.0",
    "tape": "4.9.1",
    "tslint": "5.11.0",
    "tslint-config-prettier": "1.17.0",
    "typescript": "3.2.2",
    "typescript-tslint-plugin": "0.2.0"
  }
}
